// Applesoft_BASIC_SPIRAL
// Modified Archimedean Spiral Code from https://rosettacode.org/ to plot a spiral in different colors for 10 minutes on an Apple II.
// by Sascha Athmer https://github.com/J0hnExample/Applesoft_BASIC_SPIRAL.git
100 DIM TIMES(10)
101 DIM COLORS(10)
102 COLORS(1) = 1
103 COLORS(2) = 2
104 COLORS(3) = 5
105 COLORS(4) = 6
106 COLORS(5) = 1 
107 COLORS(6) = 2
108 COLORS(7) = 5
109 COLORS(8) = 6
110 COLORS(9) = 1 
111 COLORS(10) = 2
120 LET H = 96
130 LET W = H + H / 2
140 FOR I = 1 TO 10
160     HGR2 
170     HCOLOR= COLORS(I)
180     LET A = 0.1
190     LET B = 0.3
200     LET PI = 3.1415926535
210     LET M = 16 * 2 * PI
220     LET S = 0.008
221		LET STARTIME = PEEK(78) + 256 * PEEK(79) 
230     FOR T = S TO M STEP S
240         LET R = A + B * T
250         LET X = (R * COS(T) * 3) + W  
260         LET Y = (R * SIN(T) * 3) + H 
270         IF X < 0 THEN  330
280         IF Y < 0 THEN  330 
290         IF X > 279 THEN  330  
300         IF Y > 191 THEN  330
310         HPLOT X,Y
320     NEXT T
330     LET ETIME = PEEK(78) + 256 * PEEK(79)  
350     LET TIMES(I) = ETIME - STARTIME
351 	IF TIMES(I) < 0 THEN TIMES(I) = TIMES(I) * -1
360 NEXT I
370 TEXT 
380 LET MINTIME = TIMES(1)
390 LET MAXTIME = TIMES(1)
400 LET SUMTIME = 0
410 FOR I = 1 TO 1
420     IF TIMES(I) < MINTIME THEN LET MINTIME = TIMES(I)
430     IF TIMES(I) > MAXTIME THEN LET MAXTIME = TIMES(I)
440     LET SUMTIME = SUMTIME + TIMES(I)
450 NEXT I
460 LET AVGTIME = SUMTIME / 10
461 HOME
462 TEXT
470 PRINT "MINIMUM TIME: ";
471 IF MINTIME < 0 THEN MINTIME = MINTIME * -1
472 PRINT MINTIME

480 PRINT "MAXIMUM TIME: ";
481 IF MAXTIME < 0 THEN MAXTIME = MAXTIME * -1
482 PRINT MAXTIME

490 PRINT "AVERAGE TIME: ";
491 IF AVGTIME < 0 THEN AVGTIME = AVGTIME * -1
492 PRINT AVGTIME
